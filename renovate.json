{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "separateMajorMinor": false,
    "customManagers": [
        {
          "customType": "regex",
          "fileMatch": [
            "(^|/|\\.)(CMakeLists.txt)file$"
          ],
          "matchStrings": [
            "datasource=(?<datasource>.*?) depName=(?<depName>.*?) (allowedVersions=(?<allowedVersions>.*?))? (versioning=(?<versioning>.*?))?\\sGIT_TAG=(?<currentValue>.*)\\s"
          ]
        },
        {
            "customType": "regex",
            "fileMatch": ["^Eartfile$"],
            "matchStrings": ["VERSION=(?<currentValue>.*?)\\n"],
            "datasource": "github-tags",
            "depName": "earthly/earthly",
            "versioning": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)$"
        },
        {
            "customType": "regex",
            "fileMatch": ["^Eartfile$"],
            "matchStringsStrategy": "any",
            "matchStrings": [
              "ENV [A-Z]+_VERSION=(?<currentValue>.*) # (?<datasource>.*?)/(?<depName>.*?)(\\&versioning=(?<versioning>.*?))?\\s",
              "FROM (?<depName>\\S*):(?<currentValue>\\S*)"
            ],
            "datasourceTemplate": "docker"
        },
        {
            "customType": "regex",
            "fileMatch": ["^ci.yml$"],
            "matchStrings": [
               "datasource=(?<datasource>.*?) depName=(?<depName>.*?)\\s.*?_VERSION:(?<currentValue>.*)\\s"
            ]
        }
      ]
}