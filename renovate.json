{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:recommended"
    ],
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash",
    "separateMajorMinor": false,
    "customManagers": [
        {
          "customType": "regex",
          "fileMatch": [
            "(^|/|\\.)(Earthfile|CMakeLists.txt)file$",
            "(^|/)(Earthfile|CMakeLists.txt)file[^/]*$"
          ]
        }
      ]
}